<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="40dp"
    android:background="@drawable/shape_white"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingLeft="40px"
    android:paddingRight="40px">

    <TextView
        android:id="@+id/dialogTitle"
        android:layout_width="@dimen/list_dialog_item_width"
        android:layout_height="@dimen/list_dialog_item_height"
        android:gravity="center"
        android:paddingTop="25dp"
        android:text="请输入密码"
        android:textColor="@color/black"
        android:textSize="@dimen/dialog_title_text_size" />

    <!--<TextView
        android:id="@+id/dialogMessage"
        style="@style/textStyle"
        android:paddingTop="@dimen/padding"
        android:text="@string/sureDelete"
        android:textColor="@color/textColor54"
        android:textSize="@dimen/dialog_item_text_size"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"/>-->
    <EditText android:id="@+id/etPwd"
        android:layout_width="@dimen/list_dialog_item_width"
        android:layout_height="@dimen/list_dialog_item_height"
        android:layout_marginLeft="40px"
        android:layout_marginRight="40px"
        android:inputType="textPassword"
        android:textSize="@dimen/dialog_input_text_size"/>

    <LinearLayout
        android:layout_width="@dimen/list_dialog_item_width"
        android:layout_height="wrap_content"
        android:gravity="center">
        <Button
            android:id="@+id/btnSubmit"
            android:layout_width="@dimen/list_dialog_item_width"
            android:layout_height="@dimen/list_dialog_item_height"
            android:background="@null"
            android:layout_weight="1"
            android:text="* 确认"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="@dimen/dialog_input_promet_text_size"/>
        <Button
            android:id="@+id/btnPromet"
            android:layout_width="@dimen/list_dialog_item_width"
            android:layout_height="@dimen/list_dialog_item_height"
            android:background="@null"
            android:text="# 关闭"
            android:textColor="@color/black"
            android:gravity="center"
            android:textSize="@dimen/dialog_input_promet_text_size"
            android:layout_weight="1"/>
    </LinearLayout>

    <TextView
        android:id="@+id/tvPwdRight"
        android:layout_width="@dimen/list_dialog_item_width"
        android:layout_height="@dimen/list_dialog_item_height"
        android:textColor="@color/black"
        android:textSize="@dimen/dialog_title_text_size"
        android:gravity="center_horizontal"
        android:visibility="gone"
        android:text="门已开"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/tvPwdError"
        android:layout_width="@dimen/list_dialog_item_width"
        android:layout_height="@dimen/list_dialog_item_height"
        android:textColor="@color/red"
        android:text="密码错误，请重新输入"
        android:textSize="@dimen/dialog_title_text_size"
        android:gravity="center_horizontal"
        android:visibility="gone"
        android:textStyle="bold" />
</LinearLayout>