<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="出租屋视频门禁系统"
            android:textSize="@dimen/start_title_font_size"
            android:textColor="@color/white"
            android:gravity="center_horizontal"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="初始化"
            android:textSize="@dimen/start_title_font_size"
            android:textColor="@color/white"
            android:gravity="center_horizontal"
            android:layout_marginTop="@dimen/start_text_margin_top_1"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="请使用维护安装APP扫描并进行初始化"
            android:textSize="@dimen/start_text_font_size"
            android:textColor="@color/white"
            android:gravity="center_horizontal"
            android:layout_marginTop="@dimen/start_text_margin_top_1"/>
        <ImageView
            android:id="@+id/imgCode"
            android:layout_width="@dimen/start_code_size"
            android:layout_height="@dimen/start_code_size"
            android:contentDescription="@null"
            android:scaleType="fitXY"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/start_text_margin_top_2"/>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="广州千炫信息科技有限公司技术支持"
        android:textColor="@color/white"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/start_text_margin_bottom"
        android:textSize="@dimen/start_text_font_size"
        android:gravity="center_horizontal"/>

</RelativeLayout>